@model IEnumerable<BAL.Modelos.ModeloTipo>

@{
    ViewBag.Title = "Inicio";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Create New", "Create") @Html.ActionLink("ver mascotas por tipo","verMascotaPorTipo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdTipo }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdTipo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdTipo })
            </td>
        </tr>
    }
}
else {
    <tr>
        <td colspan="3">no hay elementos</td>
    </tr>
}
</table>
