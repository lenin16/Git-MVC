@model IEnumerable<BAL.Modelos.ModeloDueno>

@{
    ViewBag.Title = "Inicio";
}

<h2>Dueños</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.IdDueno)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        
        <th>Acciones</th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.IdDueno)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.IdDueno  }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdDueno }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdDueno })
                </td>
            </tr>
        }

    }
    else
    {
        <tr>
            <td colspan="3">sin elementos</td>
        </tr>
    }


</table>
